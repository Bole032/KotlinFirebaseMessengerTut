<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:layout_marginTop="16dp"
                                                   android:id="@+id/ConstraintLayout">
    <TextView
            android:text="Username"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/twUsernameNewMessage"
            app:layout_constraintTop_toTopOf="@+id/iwNewMessage"
            app:layout_constraintBottom_toBottomOf="@+id/iwNewMessage"
            app:layout_constraintStart_toEndOf="@+id/iwNewMessage" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_width="2dp"
            android:layout_width="60dp"
            android:layout_height="60dp" app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/iwNewMessage" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>